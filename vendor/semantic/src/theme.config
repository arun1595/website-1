/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site        : 'hyperstack';
@reset       : 'hyperstack';

/* Elements */
@button      : 'hyperstack';
@container   : 'hyperstack';
@divider     : 'hyperstack';
@flag        : 'hyperstack';
@header      : 'hyperstack';
@icon        : 'hyperstack';
@image       : 'hyperstack';
@input       : 'hyperstack';
@label       : 'hyperstack';
@list        : 'hyperstack';
@loader      : 'hyperstack';
@placeholder : 'hyperstack';
@rail        : 'hyperstack';
@reveal      : 'hyperstack';
@segment     : 'hyperstack';
@step        : 'hyperstack';

/* Collections */
@breadcrumb  : 'hyperstack';
@form        : 'hyperstack';
@grid        : 'hyperstack';
@menu        : 'hyperstack';
@message     : 'hyperstack';
@table       : 'hyperstack';

/* Modules */
@accordion   : 'hyperstack';
@checkbox    : 'hyperstack';
@dimmer      : 'hyperstack';
@dropdown    : 'hyperstack';
@embed       : 'hyperstack';
@modal       : 'hyperstack';
@nag         : 'hyperstack';
@popup       : 'hyperstack';
@progress    : 'hyperstack';
@rating      : 'hyperstack';
@search      : 'hyperstack';
@shape       : 'hyperstack';
@sidebar     : 'hyperstack';
@sticky      : 'hyperstack';
@tab         : 'hyperstack';
@transition  : 'hyperstack';

/* Views */
@ad          : 'hyperstack';
@card        : 'hyperstack';
@comment     : 'hyperstack';
@feed        : 'hyperstack';
@item        : 'hyperstack';
@statistic   : 'hyperstack';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
